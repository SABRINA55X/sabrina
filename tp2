#include<stdio.h> 
int  main (){
  int i,n,j,k,m[100][100];
  
printf("donner n:");
scanf("%d",&n);
for(i=0;i<n;i++){
for(j=0;j<n;j++){
  printf("m[%d][%d]=" ,i,j);
scanf("%d" ,&m[i][j]);
}
printf("\n");  
}
printf("la matrice est\n");
for(i=0;i<n;i++){
  for(j=0;j<n;j++){
  printf("%2d\t        ",m[i][j]);
}
printf("\n");
}
for(i=0;i<n;i++){
  for(j=0;j<n;j++){
    if(i>j){
    k=m[i][j];
  m[i][j]=m[j][i];
  m[j][i]=k;
}}}
  printf("la matrice apr√©s le coeur du triangle\n");
for(i=0;i<n;i++){
  for(j=0;j<n;j++){
printf("%2d  \t    ",m[i][j]);    }  
printf("\n");  }
return 0;
}
